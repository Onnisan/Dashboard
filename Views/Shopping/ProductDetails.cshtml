
@model IEnumerable<ProductDetails>;
@{

	ViewData["Title"] = "Product Detais";
	Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}

<section class="vh-100" style="background-color: lightskyblue">
    <div class="container h-100">
        @foreach(var item in Model)
        {
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <p><span class="h2">تفاصيل المنتج </span>
                        @*<span class="h4">(1 item in your cart)</span>*@
                        </p>

                    <div class="card mb-4">
                        <div class="card-body p-4">

                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/1.webp"
                                         class="img-fluid" alt="Generic placeholder image">
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">اسم المنتج</p>
                                        <p class="lead fw-normal mb-0">@item.Descreption</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">اللون</p>
                                        <p class="lead fw-normal mb-0">
                                            @item.Color
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">الكمية</p>
                                        <p class="lead fw-normal mb-0">@item.Qty</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">السعر</p>
                                        <p class="lead fw-normal mb-0">@item.Price</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">مبلغ ضريبة القيمة المضافة</p>
                                        <p class="lead fw-normal mb-0">@(item.Price*0.15)</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card mb-5">
                        <div class="card-body p-4">

                            <div class="float-end">
                                <p class="mb-0 me-5 d-flex align-items-center">
                                    <span class="small text-muted me-2">المجموع النهائي: </span> <span class="lead fw-normal">@(item.Price+item.Price*0.15)</span>
                                </p>
                            </div>

                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-light btn-lg me-2">العودة الى المنتجات</a>
                        <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-primary">اشتري الآن</a>
                    </div>

                </div>
            </div>

        }
    </div>
</section>


